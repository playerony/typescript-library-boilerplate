{
  "name": "typescript-library-boilerplate",
  "version": "1.0.0",
  "description": "Minimal boilerplate for Typescript libraries",
  "license": "MIT",
  "author": "Paweł Wojtasiński",
  "repository": "git@github.com:playerony/typescript-library-boilerplate.git",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "check": "npm run lint && npm run typecheck && npm run test && npm run commitlint && npm run build",
    "commitlint": "commitlint -- --from=main",
    "dev": "yarn build --watch --preserveWatchOutput",
    "format": "prettier --write .",
    "lint": "eslint src --ext js,ts",
    "lint:fix": "yarn lint --fix",
    "prepare": "husky install",
    "test": "jest",
    "test:ci": "jest --ci --coverage --forceExit",
    "test:coverage": "jest --collectCoverage",
    "test:update-snapshot": "jest --updateSnapshot",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit"
  },
  "types": "dist/index.d.ts",
  "devDependencies": {
    "@babel/preset-env": "^7.14.9",
    "@babel/preset-typescript": "^7.14.5",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@types/jest": "^26.0.24",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "eslint": "^7.32.0",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "lint-staged": "^11.1.1",
    "prettier": "^2.3.2",
    "prettier-package-json": "^2.6.0",
    "typescript": "^4.3.5"
  },
  "publishConfig": {
    "access": "public"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "pre-commit": "lint-staged && npm test"
    }
  },
  "volta": {
    "node": "14.17.4",
    "yarn": "1.22.11"
  }
}
